<Window x:Class="_2._1.AdivinaNumero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._1.AdivinaNumero"
        mc:Ignorable="d"
        Title="Adivina el número" Height="160" Width="485">
    <Grid>
        <TextBox x:Name="numeroTextBox"  HorizontalAlignment="Left" Height="20" Margin="176,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" FontSize="10"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="40,32,0,0" FontSize="11" Text="¿Qué número he pensado?"/>
        <Button x:Name="comprobarButton"  Content="Comprobar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="83,69,0,0" FontSize="12" Click="Button_Click" Height="20"/>
        <Button x:Name="reiniciarButton"  Content="Reiniciar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="194,69,0,0" RenderTransformOrigin="0.034,-0.233" FontSize="12" Height="20"/>
        <TextBlock x:Name="pistaTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="333,34,0,0"/>

    </Grid>
</Window>
